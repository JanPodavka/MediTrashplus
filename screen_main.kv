<MainWindow>:
    name:"main"

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'
        Button:
            text: "Vložit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'
        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
        Button:
            text: "Statistika"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .5, .4
        MDLabel:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .7, .2
            text: "VÍTEJTE ZPĚT"
            halign: "center"
            font_size: .7 * self.height
        MDLabel:
            id: main_day_of_week
            size_hint: 1, .2
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "center"
        BoxLayout:
            size_hint: .1,.6
    Image:
        source: 'obrazky/logo_plus.png'
        size_hint_x: .25
        elevation: 10
        pos_hint: {"center_x": .2, "center_y": .65}
    Image:
        source: 'obrazky/wave.png'
        size_hint_x: 1.4
        pos_hint: {"center_x": .65, "center_y": .2}