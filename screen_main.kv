<MainWindow>:
    name:"main"

    BoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .1
            md_bg_color: .0, .0, .0, .15
            Button:
                text: "Profil"
            Button:
                text: "Vložit odpad"
            Button:
                text: "Historie"
            Button:
                text: "Statistika"
            Image:
                source: 'obrazky/logo.png'

        MDBoxLayout:
            orientation: "vertical"

            MDRaisedButton:
                text: "Odhlásit"
                font_size: 32
                on_release : print("zpatky")
                on_press:
                    app.root.current = "login"
                    root.manager.transition.direction = "left"