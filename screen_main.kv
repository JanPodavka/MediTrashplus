<MainWindow>:
    name:"main"

    BoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .1
            md_bg_color: .0, .0, .0, .15
            Button:
                text: "Profil"
                on_press:
                    app.root.current = 'main'
            Button:
                text: "Vložit odpad"
                on_press:
                    app.root.current = 'addtrash'
            Button:
                text: "Historie"
            Button:
                text: "Statistika"
            Image:
                source: 'obrazky/logo.png'

        MDCard:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .5, .4
            elevation: 20
            Button:
        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .9
            MDRaisedButton:
                text: "Odhlásit"
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: 32
                on_release : print("zpatky")
                on_press:
                    app.root.current = "login"
                    root.manager.transition.direction = "left"