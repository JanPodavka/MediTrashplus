<HistoryWindow>:
    name:"history"



    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'
        Button:
            text: "Vlo≈æit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'
        Button:
            text: "Odvoz odpadu"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'odvoz'
        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .6)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'history'

        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)
    BoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_size: True
        id: table

