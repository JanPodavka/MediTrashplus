
<HistoryWindow>:
    name:"history"

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'

        Button:
            text: "Vlo≈æit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'

        Button:
            text: "Odvoz odpadu"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'odvoz'

        Button:
            text: "Statistiky"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'statistic'

        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .6)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'history'

        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)

    BoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_size: True
        id: table


    MDFillRoundFlatButton:
        text: "Odsranit"
        background_color: (.0, .0, .0, .6)
        size_hint: .2,.07
        font_size: 0.4 * self.height
        pos_hint: {"center_x": .76, "center_y": .12}
        on_press:
            root.deleteData()

    Image:
        source: 'obrazky/line3.png'
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": .07}

