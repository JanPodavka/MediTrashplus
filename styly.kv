#:import App kivymd.app.MDApp

WindowManager:
    LoginWindow:
    MainWindow



<LoginWindow>:
    name:'login'

    MDCard:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .8, .8
        elevation: 10
        padding: 10
        MDBoxLayout:
            padding: 10
            spacing: "25dp"
            orientation: 'vertical'
            size: root.width, root.height

            BoxLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_y: 3
                Image:
                    source: 'obrazky/cover.png'
                    allow_stretch: True
                    pos_hint: {"center_x": .5, "center_y": .3}

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.6
                pos_hint: {"center_x": .5, "center_y": 1}
                spacing:20

                MDRoundFlatButton:
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    size_hint: 0.5, 0.5
                    text_color: 0, 0, 0, 1
                    text_size: None, None
                    text: 'Přihlášení'
                    on_press:
                        app.root.current = "main"
                        root.manager.transition.direction = "left"
                MDRoundFlatButton:
                    pos_hint: {'center_x': 0.5,'center_y': .5}
                    text_color: 0, 0, 0, 1
                    size_hint: 0.5, 0.5
                    text_size: None, None
                    text: 'Registrace'
                    on_press:
                        app.root.current = "main"
                        root.manager.transition.direction = "left"
            BoxLayout:
                orientation: "vertical"
                size_hint_y: 1
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                MDTextField:
                    hint_text: "Přihlašovací jméno"
                    text_color: 0, 0, 0, 0.75
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    size_hint_x: 0.6

                MDTextField:
                    hint_text: "Heslo"
                    text_color: 0, 0, 0, 0.75
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    size_hint_x: 0.6

            BoxLayout:
                orientation: "vertical"
                size_hint_y: 0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                MDFillRoundFlatButton:
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    text_color: 0, 0, 0, 1
                    size_hint: 0.25, 0.25
                    text_size: None, None
                    text: 'Registrace'
                    on_press:
                        app.root.current = "main"
                        root.manager.transition.direction = "left"


