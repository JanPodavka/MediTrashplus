#:import App kivymd.app.MDApp

WindowManager:
    LoginWindow:
    MainWindow



<LoginWindow>:
    name:'login'

    MDBoxLayout:

        padding: 10
        spacing: "25dp"
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint_y: 1.5
            Image:
                source: 'obrazky/cover.png'
                allow_stretch: True
                pos_hint: {"center_x": .5, "center_y": .1}

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.5
            pos_hint: {"center_x": .5, "center_y": .5}
            spacing:20



            MDFillRoundFlatIconButton:
                pos_hint: {'center_x': 0.5,'center_x': 0.5}
                size_hint: 0.5, 0.5
                #width: .3 * self.parent.width
                text_size: None, None
                text: 'Přihlásit'
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"
            MDFillRoundFlatIconButton:
                pos_hint: {'center_x': 0.5,'center_x': 0.5}
                #width: .3 * self.parent.width
                size_hint: 0.5, 0.5
                text_size: None, None
                text: 'Registrace'
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"
        BoxLayout:
            orientation: "vertical"
            pos_hint: {'center_x': 0.5,'center_x': 0.5}
            MDTextField:
                hint_text: "Přihlašovací jméno"
                pos_hint: {'center_x': 0.5,'center_x': 0.5}
                size_hint_x: 0.6

            MDTextField:
                hint_text: "Heslo"
                pos_hint: {'center_x': 0.5,'center_x': 0.5}
                size_hint_x: 0.6
<MainWindow>:
    name:"main"

    MDToolbar:
        pos_hint: {"top": 1}
        spacing: "5dp"
        md_bg_color=get_color_from_hex("#2d2734")
        Button:
            text: "Profil"
        Button:
            text: "Vložit odpad"
        Button:
            text: "Historie"
        Button:
            text: "Statistika"
        Image:
            source: 'obrazky/logo.png'




