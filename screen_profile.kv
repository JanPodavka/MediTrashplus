<ProfileWindow>:
    name:'profile'

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .6)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'
        Button:
            text: "Vložit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'
        Button:
            text: "Odvoz odpadu"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'odvoz'
        Button:
            text: "Statistiky"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'statistic'
        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'history'
        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)



    MDCard:
        size_hint: .35, .45
        pos_hint: {"center_x": .7, "center_y": .52}
        radius: [20, 20, 20, 20]
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                size_hint_x: .05
            BoxLayout:
                orientation: "vertical"
                size_hint_x: .07
                BoxLayout:


                BoxLayout:
                    MDIcon:
                        pos_hint: {"center_x": .75, "center_y": .4}
                        icon:"map-marker"
                BoxLayout:
                    MDIcon:
                        pos_hint: {"center_x": .75, "center_y": .4}
                        icon: "card-account-details-outline"
                BoxLayout:
                    MDIcon:
                        pos_hint: {"center_x": .75, "center_y": .4}
                        icon: "phone"
                BoxLayout:
                    MDIcon:
                        pos_hint: {"center_x": .75, "center_y": .4}
                        icon: "email"
            BoxLayout:
                size_hint_x: .9
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: 0.15
                BoxLayout:
                    MDLabel:
                        pos_hint: {"center_x": .75, "center_y": .5}
                        font_size: self.width/16
                        id: nazev_organizace
                        underline: True
                        bold: True
                        halign: "center"
                        valign: "middle"
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.05
                    MDLabel:
                        pos_hint: {"center_x": .95, "center_y": .5}
                        font_size: self.width/20
                        id: adresa
                        halign: "left"
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.05
                    MDLabel:
                        pos_hint: {"center_x": .75, "center_y": .5}
                        font_size: self.width/20
                        id: ico
                        halign: "left"
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.05
                    MDLabel:
                        pos_hint: {"center_x": .75, "center_y": .5}
                        font_size: self.width/20
                        id: telefon
                        halign: "left"
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.05
                    MDLabel:
                        pos_hint: {"center_x": .75, "center_y": .5}
                        font_size: self.width/20
                        id: email
                        halign: "left"
            BoxLayout:
                size_hint_x: 0.1

    Image:
        source: 'obrazky/rsz_doc.png'
        size_hint_x: 0.15
        allow_stretch: True
        pos_hint: {"center_x": .88, "center_y": .78}

    MDCard:
        size_hint: .35, .45
        pos_hint: {"center_x": .28, "center_y": .52}
        radius: [20, 20, 20, 20]

    Image:
        source: 'obrazky/line3.png'
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": .09}


    MDFloatingActionButtonSpeedDial:
        data: app.data
        #hint_animation: True
        right_pad: True
        root_button_anim: True
        bg_hint_color: app.theme_cls.primary_light
        icon: "cog"
        callback: app.callback_update_profile

    BoxLayout:
        pos_hint: {"center_y": 5}
        size_hint: .5, .5
        orientation: "vertical"
        spacing: 30
        CircularProgressBar:
            id: progress_bar_bezpecne
            size_hint: (None, None)
            height: 250
            width: 250
            max: 1000 * 1000
        CircularProgressBar:
            id: progress_bar_nebezpecne
            size_hint: (None, None)
            height: 250
            width: 250
            max: 100 * 1000

<Popup_psswd>:
    id: checker
    orientation: "vertical"
    spacing: "1dp"
    size_hint_y: None
    height: "180dp"

    MDTextField:
        id: profile_old_psswd
        hint_text: "Původní heslo"
        password: True

    MDTextField:
        id: profile_new_psswd
        hint_text: "Nové heslo"
        password: True

    MDTextField:
        id: profile_new_psswd_check
        hint_text: "Nové heslo znovu"
        password: True

<Popup_user>:
    id: checker_info
    orientation: "vertical"
    spacing: "1dp"
    size_hint_y: None
    height: "230dp"

    MDTextField:
        id: profile_name
        hint_text: "Název zařízení"
        text: app.get_data(1)

    MDTextField:
        id: profile_phone
        hint_text: "Telefon"
        text: app.get_data(4)

    MDTextField:
        id: profile_email
        hint_text: "E-mail"
        text:

    MDTextField:
        id: profile_address
        hint_text: "Adresa"
        text: app.get_data(2)
