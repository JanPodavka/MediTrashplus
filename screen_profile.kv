<ProfileWindow>:
    name:'profile'

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .6)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'
        Button:
            text: "Vložit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'
        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
        Button:
            text: "Statistika"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)


    BoxLayout:
        size_hint: 1, .4
        pos_hint: {"center_x": .5, "center_y": .6}
        spacing:10
        BoxLayout: ## Labely
            size_hint:.05,1
            orientation: "vertical"
            MDLabel:
                text: "Jméno"
                halign: "right"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                text: "Heslo"
                halign: "right"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                text: "Adresa"
                halign: "right"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                text: "Telefon"
                halign: "right"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
        BoxLayout: ## Textfieldy
            orientation: "vertical"
            spacing:20
            size_hint: .3,1
            pos_hint: {"center_x": .2, "center_y": .5}
            MDTextFieldRect:
                mode: "rectangle"
                #hint_text: "Name"
                id: user_name
                size_hint: 1, .8
                font_size: 0.65 * self.height
                pos_hint: {"center_x": .5, "center_y": .5}
            MDTextFieldRect:
                id: user_heslo
                font_size: 0.65 * self.height
                size_hint: 1, .8
                max_text_length: 9
                pos_hint: {"center_x": .5, "center_y": .5}
            MDTextFieldRect:
                id: user_address
                font_size: 0.65 * self.height
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDTextFieldRect:
                id: user_number
                font_size: 0.65 * self.height
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
        BoxLayout:
            spacing:20
            size_hint: .2,1
            pos_hint: {"center_x": .6, "center_y": .5}
            orientation: "vertical"
            MDLabel:
                id: user_name_info
                theme_text_color: "Custom"
                text_color: 1,0,0,1

                font_size: 0.40 * self.height
                halign: "left"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                id: user_ico_info
                theme_text_color: "Custom"
                text_color: 1,0,0,1
                font_size: 0.40 * self.height
                halign: "left"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                id: user_address_info
                theme_text_color: "Custom"
                text_color: 1,0,0,1
                font_size: 0.40 * self.height
                halign: "left"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                id: user_number_info
                theme_text_color: "Custom"
                text_color: 1,0,0,1
                font_size: 0.40 * self.height
                halign: "left"
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}

    MDFillRoundFlatButton:
        id: change_info
        pos_hint: {"center_x": .5, "center_y": .2}
        size_hint:.05,.05
        text: "Upravit Informace"
        on_press:
            #root.clear_info()
            root.change_info([user_name.text,user_address.text,user_heslo.text,user_number.text])

    MDFillRoundFlatButton:
        id: profile_change_psswd
        pos_hint: {"center_x": .8, "center_y": .2}
        size_hint:.09,.06
        text: "Změnit heslo"
        on_press:
            root.change_psswd()


    Image:
        source: 'obrazky/line3.png'
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": .09}


<Content>:
    id: checker
    orientation: "vertical"
    spacing: "1dp"
    size_hint_y: None
    height: "180dp"

    MDTextField:
        id: profile_old_psswd
        hint_text: "Původní heslo"
        password: True

    MDTextField:
        id: profile_new_psswd
        hint_text: "Nové heslo"
        password: True

    MDTextField:
        id: profile_new_psswd_check
        hint_text: "Nové heslo znovu"
        password: True

