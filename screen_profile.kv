<ProfileWindow>:
    name:'profile'
    BoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .1
            md_bg_color: .0, .0, .0, .15
            Button:
                text: "Profil"
                on_press:
                    app.root.current = 'profile'
            Button:
                text: "Vlo≈æit odpad"
                on_press:
                    app.root.current = 'addtrash'
            Button:
                text: "Historie"
            Button:
                text: "Statistika"
            Image:
                source: 'obrazky/logo.png'
        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .9