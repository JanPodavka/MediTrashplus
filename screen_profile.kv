<ProfileWindow>:
    name:'profile'

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08
        Button:
            text: "Profil"
            background_color: (.0, .0, .0, .6)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'profile'

        Button:
            text: "Vložit odpad"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addtrash'
        Button:
            text: "Odvoz odpadu"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'odvoz'
        Button:
            text: "Historie"
            background_color: (.0, .0, .0, .45)
            font_size: 0.32 * self.height
            #on_press:
            #    app.root.current = 'history'
        Image:
            source: 'obrazky/logo.png'
            background_color: (.0, .0, .0, .45)

    Image:
        source: 'obrazky/line3.png'
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": .09}

    MDFloatingActionButtonSpeedDial:
        hint_animation: True
        data: app.data
        root_button_anim: True
        label_text_color: 0,0,0,1
        bg_hint_color: 0,0,0,.2
        icon: "pencil"
        right_pad: True
        callback: app.callback_update_profile



<Popup_psswd>:
    id: checker
    orientation: "vertical"
    spacing: "1dp"
    size_hint_y: None
    height: "180dp"

    MDTextField:
        id: profile_old_psswd
        hint_text: "Původní heslo"
        password: True

    MDTextField:
        id: profile_new_psswd
        hint_text: "Nové heslo"
        password: True

    MDTextField:
        id: profile_new_psswd_check
        hint_text: "Nové heslo znovu"
        password: True

