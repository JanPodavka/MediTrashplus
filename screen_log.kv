<LoginWindow>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'obrazky/line.png'
    name:'login'
    MDIconButton:
        icon: "obrazky/exit-to-app.png"
        on_press: quit()


    MDCard:
        on_enter: root.login_write()
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .8, .8
        elevation: 10
        padding: 10
        MDBoxLayout:
            padding: 10
            spacing: "25dp"
            orientation: 'vertical'
            size: root.width, root.height
            BoxLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_y: 1.5
                Image:
                    source: 'obrazky/logo.png'
                    allow_stretch: True
                    pos_hint: {"center_x": .5, "center_y": .3}

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.6
                pos_hint: {"center_x": .5, "center_y": 1}
                spacing:20

                MDRoundFlatButton:
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    size_hint: 0.5, 0.5
                    text_color: 0, 0, 0, 1
                    text_size: None, None
                    text: 'Přihlášení'


                MDRoundFlatButton:
                    pos_hint: {'center_x': 0.5,'center_y': .5}
                    text_color: 0, 0, 0, 1
                    size_hint: 0.5, 0.5
                    text_size: None, None
                    text: 'Registrace'
                    on_press:
                        app.root.current = "registrace"
                        root.manager.transition.direction = "left"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 0.55,1
                pos_hint: {'center_x': 0.52,'center_y': 1}
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1,1
                    MDTextField:
                        id: name
                        max_text_length: 8
                        hint_text: "IČO"
                        text_color: 0, 0 , 0, 0.75
                        pos_hint: {'center_x': 0.47,'center_y': 0.5}

                    MDTextField:
                        id: password
                        password: True
                        #icon_right: 'eye-off'
                        hint_text: "Heslo"
                        text_color: 0, 0, 0, 0.75
                        pos_hint: {'center_x': 0.47,'center_y': 0.5}
                        #on_icon_right: print("tests")


            BoxLayout:
                orientation: "horizontal"
                size_hint: 0.5, 0.45
                pos_hint: {'center_x': 0.37,'center_y':1}
                MDLabel:
                    text: "Zapamatovat"
                    font_size: 0.40 * self.height
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, .6
                    size_hint: 0.3, 1
                    halign: "right"
                MDCheckbox:
                    id: log_remember_user
                    text_color: 0, 0, 0, 0.50
                    size: "24dp", "24dp"
                    size_hint: 0.1, 1
                BoxLayout:
                    size_hint: 0.1, 1
                MDFillRoundFlatButton:
                    text_color: 0, 0, 0, 1
                    size_hint: 0.5, 1
                    text_size: None, None
                    text: 'Přihlásit'
                    on_press:
                        if(root.login_user(name.text, password.text)):\
                        app.root.current = "main"
                        root.login_remember_user()
                        root.login_clear_input()
                        root.manager.transition.direction = "left"
            BoxLayout:
                size_hint: 1    , 0.2

    MDIconButton:
        icon: 'eye-off'
        pos_hint: {"center_x": .68, "center_y": .35}
        id: lock_button
        on_press:
            root.login_show_password()
