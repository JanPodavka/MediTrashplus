        MDTextField:
            hint_text: "Přihlašovací jméno"
            pos_hint: {"center_x": .35, "center_y": .5}
            size_hint_x: 0.6

        MDTextField:
            hint_text: "Heslo"
            pos_hint: {"center_x": .35, "center_y": .5}
            size_hint_x: 0.6

        MDFillRoundFlatButton:
            text: "Ukončit"
            font_size: 32
            size_hint_x: 1.0
            size_hint_x: None
            width: .75 * self.parent.width
            pos_hint: {"center_x": .5, "center_y": .0}
            md_bg_color: 1, 0, 0, .5 #red
            on_release : print("Konec programu")
            on_press: quit()

<MainWindow>:
    name:"main"


    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Volba obrazku"
            left_action_items: [['menu', lambda x: None]]
            elevation: 10

        MDBoxLayout:
            orientation: "vertical"

            MDRaisedButton:
                text: "zpatky"
                font_size: 32
                on_release : print("zpatky")
