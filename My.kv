#:import App kivymd.app.MDApp

WindowManager:
    LoginWindow:
    MainWindow



<LoginWindow>:
    name:'login'

    MDBoxLayout:

        padding: 10
        spacing: "25dp"
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint_y: 3
            #size_hint_x:0.5
            Image:
                source: 'obrazky/logo.png'
                allow_stretch: True
                pos_hint: {"center_x": .5, "center_y": .3}
                #size_hint_x:0.7

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.5
            pos_hint: {"center_x": .5, "center_y": .5}
            spacing:20

            Button:
                pos_hint: {'center_x': 0.5,'center_x': 0.1}
                width: .3 * self.parent.width
                text_size: None, None
                text: 'Přihlásit'
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"
            Button:
                pos_hint: {'center_x': 0.5,'center_x': 0.1}
                width: .3 * self.parent.width
                text_size: None, None
                text: 'Registrace'
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"
