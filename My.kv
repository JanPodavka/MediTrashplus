#:import App kivymd.app.MDApp
WindowManager:
    LoginWindow:
    MainWindow



<LoginWindow>:
    name:'login'

    MDBoxLayout:

        padding: 10
        spacing: "25dp"
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint_y: 3
            size_hint_x:0.5
            FitImage:
                source: 'obrazky/logo.png'
                allow_stretch: True
                pos_hint: {"center_x": .5, "center_y": .3}



        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {"center_x": .5, "center_y": .5}


            MDRoundFlatButton:
                text: "Přihlásit"
                font_size: 32
                size_hint_x: None
                width: .3 * self.parent.width
                on_release : print("Přihlášení")
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"

            MDRoundFlatButton:
                text: "Registrovat"
                font_size: 32
                size_hint_x: None
                width: .3 * self.parent.width
                on_release : print("Přihlášení")
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"

        MDTextField:
            hint_text: "Přihlašovací jméno"
            pos_hint: {"center_x": .35, "center_y": .5}
            size_hint_x: 0.6

        MDTextField:
            hint_text: "Heslo"
            pos_hint: {"center_x": .35, "center_y": .5}
            size_hint_x: 0.6

        MDFillRoundFlatButton:
            text: "Ukončit"
            font_size: 32
            size_hint_x: 1.0
            size_hint_x: None
            width: .75 * self.parent.width
            pos_hint: {"center_x": .5, "center_y": .0}
            md_bg_color: 1, 0, 0, .5 #red
            on_release : print("Konec programu")
            on_press: quit()

<MainWindow>:
    name:"main"

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Volba obrazku"
            left_action_items: [['menu', lambda x: None]]
            elevation: 10

        MDBoxLayout:
            orientation: "vertical"

            MDRaisedButton:
                text: "zpatky"
                font_size: 32
                on_release : print("zpatky")
                on_press:
                    app.root.current = "login"
                    root.manager.transition.direction = "right"
