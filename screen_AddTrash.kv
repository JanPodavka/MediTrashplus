<AddTrashWindow>:
    name: 'addtrash'

    BoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .1
            md_bg_color: .0, .0, .0, .15
            Button:
                text: "Profil"
                on_press:
                    app.root.current = 'main'
            Button:
                text: "Vložit odpad"
                on_press:
                    app.root.current = 'addtrash'
            Button:
                text: "Historie"
            Button:
                text: "Statistika"
            Image:
                source: 'obrazky/logo.png'

        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 1, .9
            BoxLayout:
                size_hint: .15,1
                orientation: 'vertical'
                MDLabel:
                    text: "Druh Odpadu:"
                    halign: 'center'
                BoxLayout:
                BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint: .45,1
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDSelectionList:
                        id: scroll
                        name :"scroll"
                        text: "select odpad"
                        size_hint: 1,.5
                MDFillRoundFlatButton:
                    pos_hint: {"center_x": .75, "center_y": .5}
                    text: "Vložit odpad"
                    text_size: None, None
                    font_size: 0.5 * self.height
                    #size_hint_y: .1
                    width: self.parent.width * 0.5
                BoxLayout:
                    size_hint: 1,.2
            BoxLayout:
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: .125,1
                    MDLabel:
                        size_hint: 1,.1
                        halign: 'center'
                        text: "Množství"
                        pos_hint: {"center_y": .8}

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: .125,1
                    MDTextFieldRect:
                        size_hint: 1,.1
                        pos_hint: {"center_x": .5,"center_y": .8}
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: .125,1
                    MDDropDownItem:
                        id: drop_item
                        size_hint: 1,.1
                        text: "KG"
                        pos_hint: {"center_x": .75, "center_y": .8}
                        on_release: app.open_menu(self)
